# RUTA Backend Environment Configuration
# Copy this file to .env and fill in the values

# Application
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ruta

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS S3 (for PDF storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=af-south-1
S3_BUCKET=ruta-content

# AI Providers
DEEPSEEK_API_KEY=
OPENAI_API_KEY=

# Payment Providers
PAYFAST_MERCHANT_ID=
PAYFAST_MERCHANT_KEY=
PAYFAST_PASSPHRASE=
PAYFAST_SANDBOX=true

YOCO_SECRET_KEY=
YOCO_PUBLIC_KEY=

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@ruta.co.za

# SMS (optional)
SMS_API_KEY=
SMS_SENDER=RUTA
